<style>
/* Section Styling */
#contacto {
  background: linear-gradient(135deg, var(--accent-50) 0%, var(--primary-50) 100%);
  position: relative;
}

#contacto::before {
  content: '';
  position: absolute;
  top: 0;
  left: -50%;
  width: 200%;
  height: 100%;
  background: linear-gradient(45deg, transparent 40%, var(--primary-100) 50%, transparent 60%);
  opacity: 0.2;
  animation: shimmer-contact 4s ease-in-out infinite;
}

.contact-content {
  position: relative;
  z-index: 1;
}

/* Header */
.contact-header {
  text-align: center;
  margin-bottom: 4rem;
}

.section-title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 800;
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
}

.section-subtitle {
  font-size: 1.25rem;
  color: var(--neutral-600);
  font-weight: 500;
  margin: 0;
}

/* Contact Grid */
.contact-grid {
  display: grid;
  grid-template-columns: 1fr 2fr;
  gap: 3rem;
  margin-bottom: 4rem;
}

/* Contact Info Card */
.contact-info-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: var(--radius-xl);
  padding: 2rem;
  border: 1px solid var(--primary-200);
  backdrop-filter: blur(10px);
  height: fit-content;
}

.info-card-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--neutral-800);
  margin-bottom: 2rem;
  text-align: center;
}

.contact-info-list {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.contact-info-item {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1rem;
  border-radius: var(--radius-lg);
  transition: all var(--transition-base);
}

.contact-info-item:hover {
  background: var(--primary-50);
  transform: translateX(8px);
}

.info-icon {
  width: 3rem;
  height: 3rem;
  background: var(--primary-100);
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.info-icon img {
  width: 1.5rem;
  height: 1.5rem;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 0.25rem;
}

.info-label {
  font-size: 0.875rem;
  font-weight: 600;
  color: var(--neutral-500);
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.info-value {
  font-size: 1rem;
  font-weight: 500;
  color: var(--neutral-800);
}

.info-value.interactive {
  color: var(--primary-600);
  text-decoration: none;
  transition: color var(--transition-base);
}

.info-value.interactive:hover {
  color: var(--primary-700);
}

/* Contact Methods */
.contact-methods {
  background: rgba(255, 255, 255, 0.8);
  border-radius: var(--radius-xl);
  padding: 2rem;
  border: 1px solid var(--primary-200);
  backdrop-filter: blur(10px);
}

.methods-title {
  font-size: 1.5rem;
  font-weight: 700;
  color: var(--neutral-800);
  margin-bottom: 2rem;
  text-align: center;
}

.methods-grid {
  display: grid;
  gap: 1rem;
}

.method-card {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1.5rem;
  border-radius: var(--radius-lg);
  text-decoration: none;
  transition: all var(--transition-base);
  position: relative;
  overflow: hidden;
}

.method-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  transition: left 0.6s;
}

.method-card:hover::before {
  left: 100%;
}

.method-card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.method-card.email {
  background: linear-gradient(135deg, #fef2f2, #fee2e2);
  border: 1px solid #fecaca;
