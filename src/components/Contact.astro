---
// Contact section component
---

<section id="contacto" class="max-w-4xl mx-auto my-16 p-8 bg-green-50 rounded-xl shadow-lg shadow-black/25 scroll-mt-20">
  <h3 class="text-3xl font-bold text-center mb-8 text-green-900">Contacto</h3>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Información de contacto -->
    <div class="space-y-4">
      <div class="flex items-center gap-3 text-lg">
        <img src="/src/assets/icons/whatsapp.svg" alt="WhatsApp" class="w-6 h-6" />
        <span class="text-gray-800">(+57) 322 338-4038</span>
      </div>
      <div class="flex items-center gap-3 text-lg">
        <img src="/src/assets/icons/Email--Streamline-Carbon.svg" alt="Email" class="w-6 h-6" />
        <span class="text-gray-800">dylanacevedoxd@gmail.com</span>
      </div>
      <div class="flex items-center gap-3 text-lg">
        <img src="/src/assets/icons/Location--Streamline-Carbon.svg" alt="Ubicación" class="w-6 h-6" />
        <span class="text-gray-800">Bucaramanga, Santander, Colombia</span>
      </div>
    </div>

    <!-- Botones de contacto directo -->
    <div class="space-y-4">
      <h4 class="text-xl font-bold text-green-900 mb-4">Contacto directo</h4>
      <div class="flex flex-col gap-3">
        <a
          href="mailto:dylanacevedoxd@gmail.com"
          class="flex items-center gap-3 bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition-colors duration-300"
        >
          <img src="/src/assets/icons/Email--Streamline-Carbon.svg" alt="Email" class="w-5 h-5" />
          Enviar Email
        </a>
        <a
          href="tel:+573223384038"
          class="flex items-center gap-3 bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600 transition-colors duration-300"
        >
          <img src="/src/assets/icons/whatsapp.svg" alt="Teléfono" class="w-5 h-5" />
          Llamar
        </a>
        <a
          href="https://wa.me/+573223384038"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-3 bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 transition-colors duration-300"
        >
          <img src="/src/assets/icons/whatsapp.svg" alt="WhatsApp" class="w-5 h-5" />
          WhatsApp
        </a>
      </div>
    </div>
  </div>

  <!-- Redes sociales -->
  <div class="mt-8">
    <h4 class="text-xl font-bold text-green-900 mb-4 text-center">Sígueme en redes</h4>
    <div class="flex justify-center gap-6">
      <a href="https://github.com/Deamacevedo" target="_blank" rel="noopener noreferrer" class="hover:scale-150 transition-transform duration-300">
        <img src="/src/assets/icons/github_light.svg" alt="GitHub" class="w-8 h-8" />
      </a>
      <a href="https://www.linkedin.com/in/deamacevedo/" target="_blank" rel="noopener noreferrer" class="hover:scale-150 transition-transform duration-300">
        <img src="/src/assets/icons/linkedin.svg" alt="LinkedIn" class="w-8 h-8" />
      </a>
      <a href="https://www.instagram.com/acevedodylan/" target="_blank" rel="noopener noreferrer" class="hover:scale-150 transition-transform duration-300">
        <img src="/src/assets/icons/Instagram_light.svg" alt="Instagram" class="w-8 h-8" />
      </a>
      <a href="https://youtube.com/@Deamacevedo" target="_blank" rel="noopener noreferrer" class="hover:scale-150 transition-transform duration-300">
        <img src="/src/assets/icons/youtube.svg" alt="YouTube" class="w-8 h-8" />
      </a>
      <a href="https://www.tiktok.com/@dylanacevedo" target="_blank" rel="noopener noreferrer" class="hover:scale-150 transition-transform duration-300">
        <img src="/src/assets/icons/tiktok.svg" alt="TikTok" class="w-8 h-8" />
      </a>
    </div>
  </div>
</section>