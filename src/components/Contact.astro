<section id="contacto" class="section-padding animate-on-scroll">
  <div class="container">
    <div class="contact-content">
      <!-- Header -->
      <div class="contact-header">
        <h2 class="section-title gradient-text">{contactData.title}</h2>
        <p class="section-subtitle">{contactData.subtitle}</p>
      </div>

      <div class="contact-grid">
        <!-- Contact Info Card -->
        <div class="contact-info-card">
          <h3 class="info-card-title">Información de contacto</h3>
          <div class="contact-info-list">
            {contactData.contactInfo.map((info) => (
              <div class="contact-info-item">
                <div class="info-icon">
                  <img src={info.icon} alt={info.label} />
                </div>
                <div class="info-content">
                  <span class="info-label">{info.label}</span>
                  {info.href ? (
                    <a href={info.href} class="info-value interactive">{info.value}</a>
                  ) : (
                    <span class="info-value">{info.value}</span>
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>

        <!-- Contact Methods -->
        <div class="contact-methods">
          <h3 class="methods-title">Métodos de contacto</h3>
          <div class="methods-grid card-animate">
            {contactData.contactMethods.map((method) => (
              <a href={method.href} class={`method-card ${method.color}`} target={method.href.startsWith('http') ? '_blank' : ''} rel={method.href.startsWith('http') ? 'noopener noreferrer' : ''}>
                <div class="method-icon" set:html={method.icon}></div>
                <div class="method-content">
                  <h4 class="method-name">{method.name}</h4>
                  <p class="method-description">{method.description}</p>
                  <span class="method-cta">{method.cta}</span>
                </div>
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Social Networks -->
      <div class="social-section">
        <h3 class="social-title">Sígueme en redes sociales</h3>
        <p class="social-description">Mantente al día con mis proyectos y contenido</p>
        <div class="social-grid card-animate">
          {contactData.socialNetworks.map((social) => (
            <a href={social.href} target="_blank" rel="noopener noreferrer" class={`social-card ${social.color}`}>
              <div class="social-icon" set:html={social.icon}></div>
              <div class="social-content">
                <span class="social-name">{social.name}</span>
                <span class="social-username">{social.username}</span>
              </div>
              <div class="social-arrow">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M7 17l9.2-9.2M17 17V7H7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Call to Action -->
      <div class="contact-cta">
        <div class="cta-card">
          <h3 class="cta-title">¿Tienes un proyecto en mente?</h3>
          <p class="cta-description">Estoy disponible para nuevos proyectos y colaboraciones. ¡Hablemos sobre cómo puedo ayudarte a hacer realidad tus ideas!</p>
          <div class="cta-buttons">
            <a href="mailto:dylanacevedoxd@gmail.com" class="cta-button primary">
