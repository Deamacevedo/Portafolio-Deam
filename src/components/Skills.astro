<section id="habilidades" class="section-padding animate-on-scroll">
  <div class="container">
    <div class="skills-content">
      <!-- Header -->
      <div class="skills-header">
        <h2 class="section-title gradient-text">{skillsData.title}</h2>
        <p class="section-subtitle">{skillsData.subtitle}</p>
      </div>

      <!-- Technologies Grid -->
      <div class="technologies-grid card-animate">
        {skillsData.technologies.map((tech, index) => (
          <div class="tech-card" style={`--delay: ${index * 0.1}s`}>
            <div class="tech-icon" set:html={tech.icon}></div>
            <h3 class="tech-name">{tech.name}</h3>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
/* Section Styling */
#habilidades {
  background: linear-gradient(135deg, var(--accent-50) 0%, var(--primary-50) 100%);
  position: relative;
  overflow: hidden;
}

#habilidades::before {
  content: '';
  position: absolute;
  top: 0;
  right: -50%;
  width: 200%;
  height: 100%;
  background: linear-gradient(-45deg, transparent 40%, var(--accent-100) 50%, transparent 60%);
  opacity: 0.3;
  animation: shimmer-reverse 4s ease-in-out infinite;
}

.skills-content {
  position: relative;
  z-index: 1;
}

/* Header */
.skills-header {
  text-align: center;
  margin-bottom: 4rem;
}

.section-title {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 800;
  margin-bottom: 1rem;
  letter-spacing: -0.02em;
}

.section-subtitle {
  font-size: 1.25rem;
  color: var(--neutral-600);
  font-weight: 500;
  margin: 0;
}

/* Technologies Grid */
.technologies-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 2rem;
  max-width: 1000px;
  margin: 0 auto;
}

.tech-card {
  background: rgba(255, 255, 255, 0.9);
  border: 1px solid var(--primary-200);
  border-radius: var(--radius-xl);
  padding: 2rem 1.5rem;
  text-align: center;
  transition: all var(--transition-base);
  cursor: pointer;
  position: relative;
  overflow: hidden;
  backdrop-filter: blur(10px);
  animation: fadeInUp 0.6s ease-out both;
  animation-delay: var(--delay);
}

.tech-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, var(--primary-100), transparent);
  transition: left 0.6s;
}

.tech-card:hover::before {
  left: 100%;
}

.tech-card:hover {
  transform: translateY(-8px);
  box-shadow: var(--shadow-xl);
  border-color: var(--primary-400);
  background: rgba(255, 255, 255, 1);
}

.tech-icon {
  width: 60px;
  height: 60px;
  margin: 0 auto 1.5rem;
  filter: drop-shadow(2px 2px 8px rgba(0,0,0,0.1));
  transition: transform var(--transition-base);
}

.tech-card:hover .tech-icon {
  transform: scale(1.1);
}

.tech-icon svg {
  width: 100%;
  height: 100%;
}

.tech-name {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--neutral-800);
  margin: 0;
  position: relative;
  z-index: 1;
  transition: color var(--transition-base);
}

.tech-card:hover .tech-name {
  color: var(--primary-700);
}

/* Animations */
@keyframes shimmer-reverse {
  0%, 100% { transform: translateX(50%); }
  50% { transform: translateX(0%); }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .technologies-grid {
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1.5rem;
  }

  .tech-card {
    padding: 1.5rem 1rem;
  }

  .tech-icon {
    width: 50px;
    height: 50px;
    margin-bottom: 1rem;
  }

  .tech-name {
    font-size: 1rem;
  }
}

@media (max-width: 480px) {
  .technologies-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .tech-card {
    padding: 1.25rem 0.75rem;
  }

  .tech-icon {
    width: 40px;
    height: 40px;
    margin-bottom: 0.75rem;
  }

  .tech-name {
    font-size: 0.9rem;
  }
}
</style>