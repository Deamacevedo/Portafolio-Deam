---
const carouselImages = Array.from({ length: 30 }, (_, i) => ({
  src: `./imgs/${i + 1}.webp`,
  alt: `Imagen de tecnolog√≠a ${i + 1}`
}));
---

<header id="inicio">
  <div class="galeria-carrusel">
    <div class="galeria-track">
      {carouselImages.map((image) => (
        <div class="img-box">
          <img
            src={image.src}
            alt={image.alt}
            loading="lazy"
            decoding="async"
          />
        </div>
      ))}
    </div>
  </div>

  <div class="hero-content">
    <h1 class="glass-box">Dylan Acevedo</h1>
    <h2 class="glass-box">Desarrollador Full Stack Junior</h2>
  </div>
</header>

<style>
/* Manejo header */
#inicio {
  height: 500px;
  position: relative;
  width: 100%;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  text-align: center;
  padding-top: 35px;
  z-index: 1;
  background-color: #f4f4f4;
}

/* Carrusel en header */
.galeria-carrusel {
  position: absolute;
  inset: 0;
  z-index: -1;
  overflow: hidden;
}

.galeria-track {
  display: flex;
  height: 100%;
  width: max-content;
  min-width: 200%;
  animation: deslizar 60s linear infinite alternate;
}

.img-box {
  min-width: 250px;
  height: 100%;
  padding: 0px 1.5px;
}

.img-box img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 12px;
}

.hero-content {
  position: relative;
  z-index: 1;
  text-align: center;
}

.glass-box {
  background: rgba(22, 192, 45, 0.25);
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: clamp(10px, 2vw, 20px);
  box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  padding: clamp(10px, 2vw, 20px) clamp(15px, 4vw, 30px);
  margin-bottom: clamp(10px, 2vw, 25px);
  transition: all 0.3s ease-in-out;
  animation: fadeInUp 1s ease-out;
}

.glass-box:nth-child(2) {
  animation-delay: 0.2s;
}

#inicio h1,
#inicio h2 {
  color: white;
  text-shadow: 0 0 10px rgba(0, 0, 0, 0.7);
  margin: 0;
  transition: transform 0.4s ease;
}

#inicio h1 {
  font-size: clamp(2.5rem, 5vw, 4rem);
  font-weight: 700;
}

#inicio h1:hover {
  transform: scale(1.05);
  text-shadow: 0 0 10px rgba(49, 54, 53, 0.8);
  color: #181b1b;
  cursor: pointer;
}

#inicio h2 {
  font-size: clamp(1.2rem, 2.5vw, 1.5rem);
  color: #ddd;
  font-weight: 400;
}

/* Animaciones */
@keyframes deslizar {
  0% { transform: translateX(0); }
  100% { transform: translateX(-80%); }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media (max-width: 768px) {
  #inicio {
    height: auto;
    aspect-ratio: 5 / 4;
  }
}
</style>